{
  "$schema": "./schemas/dialog_base_schema.json",
  "title": "比較命令設定",
  "width": 280,
  "height": 200,
  "controls": [
    {
      "id": "device_type_label",
      "type": "label",
      "x": 20,
      "y": 25,
      "width": 240,
      "height": 15,
      "text": "デバイスタイプ: 比較命令",
      "color": 7
    },
    {
      "id": "instruction_label",
      "type": "label",
      "x": 20,
      "y": 45,
      "width": 240,
      "height": 15,
      "text": "比較条件を入力してください:",
      "color": 10
    },
    {
      "id": "condition_input",
      "type": "textinput",
      "x": 20,
      "y": 65,
      "width": 240,
      "height": 20,
      "placeholder": "例: D1>10, D2=D3, D0<=100",
      "value": "",
      "max_length": 20,
      "input_type": "compare_expression",
      "color": 7,
      "bg_color": 0,
      "border_color": 7,
      "focus_border_color": 10,
      "events": ["change", "focus", "blur", "enter", "validate"],
      "validation": {
        "type": "compare_expression"
      }
    },
    {
      "id": "help_label1",
      "type": "label",
      "x": 20,
      "y": 95,
      "width": 240,
      "height": 12,
      "text": "使用可能な演算子: = <> > < >= <=",
      "color": 6
    },
    {
      "id": "help_label2",
      "type": "label",
      "x": 20,
      "y": 110,
      "width": 240,
      "height": 12,
      "text": "データソース: D番号、定数値",
      "color": 6
    },
    {
      "id": "help_label3",
      "type": "label",
      "x": 20,
      "y": 125,
      "width": 240,
      "height": 12,
      "text": "例: D1>10 (D1が10より大きい)",
      "color": 6
    },
    {
      "id": "error_label",
      "type": "label",
      "x": 20,
      "y": 145,
      "width": 240,
      "height": 10,
      "text": "",
      "color": 8,
      "visible": false
    },
    {
      "id": "ok_button",
      "type": "button",
      "x": 40,
      "y": 165,
      "width": 60,
      "height": 20,
      "text": "OK",
      "color": 7,
      "bg_color": 11,
      "hover_color": 3,
      "events": ["click"]
    },
    {
      "id": "cancel_button",
      "type": "button",
      "x": 180,
      "y": 165,
      "width": 60,
      "height": 20,
      "text": "Cancel",
      "color": 7,
      "bg_color": 8,
      "hover_color": 2,
      "events": ["click"]
    }
  ]
}