{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "label_schema.json", 
  "title": "PyPlc Ver3 Label Control Schema",
  "description": "Schema for label UI controls",
  "type": "object",
  "required": ["text"],
  "properties": {
    "text": {
      "type": "string",
      "maxLength": 200,
      "description": "Label display text"
    },
    "color": {
      "$ref": "../common/color_definitions.json#/definitions/pyxel_color",
      "description": "Text color"
    },
    "bg_color": {
      "$ref": "../common/color_definitions.json#/definitions/pyxel_color",
      "description": "Background color (optional)"
    },
    "align": {
      "enum": ["left", "center", "right"],
      "default": "left",
      "description": "Text alignment"
    },
    "font_size": {
      "enum": ["small", "normal", "large"],
      "default": "normal",
      "description": "Font size (if supported)"
    },
    "word_wrap": {
      "type": "boolean",
      "default": false,
      "description": "Whether to wrap long text"
    }
  },
  "additionalProperties": false
}