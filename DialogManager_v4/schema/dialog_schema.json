{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "DialogManager v4 Dialog Schema",
  "description": "JSON完全定義主義に基づくダイアログスキーマ",
  "type": "object",
  "properties": {
    "dialog": {
      "type": "object",
      "description": "ダイアログの基本プロパティ",
      "properties": {
        "title": {
          "type": "string",
          "description": "ダイアログタイトル"
        },
        "width": {
          "type": "integer",
          "minimum": 100,
          "description": "ダイアログ幅"
        },
        "height": {
          "type": "integer", 
          "minimum": 50,
          "description": "ダイアログ高さ"
        },
        "modal": {
          "type": "boolean",
          "default": true,
          "description": "モーダルダイアログかどうか"
        },
        "position": {
          "type": "string",
          "enum": ["center", "custom"],
          "default": "center",
          "description": "ダイアログ位置"
        },
        "x": {
          "type": "integer",
          "minimum": 0,
          "description": "X座標（position=customの場合）"
        },
        "y": {
          "type": "integer", 
          "minimum": 0,
          "description": "Y座標（position=customの場合）"
        }
      },
      "required": ["title", "width", "height"]
    },
    "controls": {
      "type": "array",
      "description": "ダイアログ内のコントロール定義",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "enum": ["label", "button", "textbox", "dropdown", "listbox"],
            "description": "コントロールタイプ"
          },
          "id": {
            "type": "string",
            "pattern": "^[a-zA-Z][a-zA-Z0-9_]*$",
            "description": "コントロールID（英数字+アンダースコア）"
          },
          "x": {
            "type": "integer",
            "minimum": 0,
            "description": "X座標"
          },
          "y": {
            "type": "integer",
            "minimum": 0,
            "description": "Y座標"
          },
          "width": {
            "type": "integer",
            "minimum": 1,
            "description": "幅"
          },
          "height": {
            "type": "integer",
            "minimum": 1,
            "description": "高さ"
          },
          "visible": {
            "type": "boolean",
            "default": true,
            "description": "表示状態"
          },
          "enabled": {
            "type": "boolean",
            "default": true,
            "description": "有効状態"
          },
          "text": {
            "type": "string",
            "description": "表示テキスト"
          },
          "color": {
            "type": "integer",
            "minimum": 0,
            "maximum": 15,
            "description": "文字色（Pyxel色番号）"
          },
          "bg_color": {
            "type": "integer",
            "minimum": 0,
            "maximum": 15,
            "description": "背景色（Pyxel色番号）"
          },
          "items": {
            "type": "array",
            "items": {"type": "string"},
            "description": "リスト項目（dropdown, listbox用）"
          },
          "selected_index": {
            "type": "integer",
            "minimum": 0,
            "description": "選択インデックス（dropdown, listbox用）"
          },
          "readonly": {
            "type": "boolean",
            "default": false,
            "description": "読み取り専用（textbox用）"
          },
          "placeholder": {
            "type": "string",
            "description": "プレースホルダー（textbox用）"
          }
        },
        "required": ["type", "id", "x", "y"],
        "additionalProperties": false
      }
    },
    "events": {
      "type": "object",
      "description": "イベントバインディング定義",
      "patternProperties": {
        "^[a-zA-Z][a-zA-Z0-9_]*\\.(click|change|enter|select|activate)$": {
          "type": "string",
          "description": "バインドするアクション名"
        }
      },
      "additionalProperties": false
    },
    "actions": {
      "type": "object",
      "description": "アクション定義",
      "patternProperties": {
        "^[a-zA-Z][a-zA-Z0-9_]*$": {
          "type": "object",
          "properties": {
            "type": {
              "enum": ["dialog_action", "file_operation", "data_operation", "file_filter"],
              "description": "アクションタイプ"
            },
            "operation": {
              "type": "string",
              "description": "操作名"
            },
            "source": {
              "type": "string",
              "description": "データソース"
            },
            "target": {
              "type": "string",
              "description": "操作対象"
            },
            "result_key": {
              "type": "string",
              "description": "結果格納キー"
            },
            "result": {
              "description": "固定結果値"
            },
            "filter_source": {
              "type": "string",
              "description": "フィルターソース（file_filter用）"
            }
          },
          "required": ["type", "operation"],
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "required": ["dialog", "controls"],
  "additionalProperties": false
}