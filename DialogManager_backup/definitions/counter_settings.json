{
  "$schema": "./schemas/dialogs/counter_settings_schema.json",
  "title": "Counter Settings",
  "width": 260,
  "height": 160,
  "controls": [
    {
      "id": "device_info_label",
      "type": "label",
      "x": 15,
      "y": 25,
      "width": 230,
      "height": 15,
      "text": "Counter: CTU (Counter UP)",
      "color": 7
    },
    {
      "id": "instruction_label",
      "type": "label",
      "x": 15,
      "y": 45,
      "width": 230,
      "height": 15,
      "text": "Preset Value (count):",
      "color": 10
    },
    {
      "id": "preset_input",
      "type": "textinput",
      "x": 15,
      "y": 65,
      "width": 230,
      "height": 20,
      "placeholder": "0",
      "value": "",
      "max_length": 5,
      "input_type": "numeric",
      "color": 7,
      "bg_color": 0,
      "border_color": 7,
      "focus_border_color": 10,
      "events": ["change", "focus", "blur", "enter", "validate"],
      "validation": {
        "type": "counter_preset_range"
      }
    },
    {
      "id": "range_label",
      "type": "label",
      "x": 15,
      "y": 90,
      "width": 230,
      "height": 10,
      "text": "Range: 0 - 65535 (count)",
      "color": 5
    },
    {
      "id": "error_label",
      "type": "label",
      "x": 15,
      "y": 105,
      "width": 230,
      "height": 10,
      "text": "",
      "color": 8,
      "visible": false
    },
    {
      "id": "ok_button",
      "type": "button",
      "x": 40,
      "y": 125,
      "width": 70,
      "height": 20,
      "text": "OK",
      "color": 7,
      "bg_color": 11,
      "hover_color": 3,
      "events": ["click"]
    },
    {
      "id": "cancel_button",
      "type": "button",
      "x": 150,
      "y": 125,
      "width": 70,
      "height": 20,
      "text": "Cancel",
      "color": 7,
      "bg_color": 8,
      "hover_color": 2,
      "events": ["click"]
    }
  ]
}