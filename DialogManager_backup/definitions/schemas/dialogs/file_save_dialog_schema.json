{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "file_save_dialog_schema.json",
  "title": "PyPlc Ver3 File Save Dialog Schema",
  "description": "Schema for file save dialog definition",
  "allOf": [
    {
      "$ref": "../dialog_base_schema.json"
    },
    {
      "type": "object",
      "properties": {
        "title": {
          "const": "Save Circuit File"
        },
        "width": {
          "const": 320
        },
        "height": {
          "const": 180
        },
        "controls": {
          "type": "array",
          "minItems": 6,
          "maxItems": 10,
          "items": {
            "anyOf": [
              {
                "allOf": [
                  {
                    "properties": {
                      "id": {
                        "const": "filename_label"
                      },
                      "type": {
                        "const": "label"
                      },
                      "text": {
                        "const": "File name:"
                      }
                    }
                  },
                  {
                    "$ref": "../controls/label_schema.json"
                  }
                ]
              },
              {
                "allOf": [
                  {
                    "properties": {
                      "id": {
                        "const": "filename_input"
                      },
                      "type": {
                        "const": "textinput"
                      },
                      "max_length": {
                        "const": 50
                      }
                    }
                  },
                  {
                    "$ref": "../controls/textinput_schema.json"
                  }
                ]
              },
              {
                "allOf": [
                  {
                    "properties": {
                      "id": {
                        "const": "extension_label"
                      },
                      "type": {
                        "const": "label"
                      }
                    }
                  },
                  {
                    "$ref": "../controls/label_schema.json"
                  }
                ]
              },
              {
                "allOf": [
                  {
                    "properties": {
                      "id": {
                        "const": "status_label"
                      },
                      "type": {
                        "const": "label"
                      }
                    }
                  },
                  {
                    "$ref": "../controls/label_schema.json"
                  }
                ]
              },
              {
                "allOf": [
                  {
                    "properties": {
                      "id": {
                        "const": "error_label"
                      },
                      "type": {
                        "const": "label"
                      },
                      "visible": {
                        "const": false
                      }
                    }
                  },
                  {
                    "$ref": "../controls/label_schema.json"
                  }
                ]
              },
              {
                "allOf": [
                  {
                    "properties": {
                      "id": {
                        "const": "save_button"
                      },
                      "type": {
                        "const": "button"
                      },
                      "text": {
                        "const": "Save"
                      }
                    }
                  },
                  {
                    "$ref": "../controls/button_schema.json"
                  }
                ]
              },
              {
                "allOf": [
                  {
                    "properties": {
                      "id": {
                        "const": "cancel_button"
                      },
                      "type": {
                        "const": "button"
                      },
                      "text": {
                        "const": "Cancel"
                      }
                    }
                  },
                  {
                    "$ref": "../controls/button_schema.json"
                  }
                ]
              }
            ]
          }
        }
      }
    }
  ]
}