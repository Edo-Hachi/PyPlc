{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "filelist_schema.json",
  "title": "PyPlc Ver3 FileList Control Schema", 
  "description": "Schema for file list UI controls",
  "type": "object",
  "properties": {
    "directory": {
      "type": "string",
      "description": "Directory to list files from"
    },
    "file_pattern": {
      "type": "string",
      "default": "*.csv",
      "description": "File pattern filter (e.g., *.csv)"
    },
    "show_extensions": {
      "type": "boolean",
      "default": true,
      "description": "Whether to show file extensions"
    },
    "max_files": {
      "type": "integer",
      "minimum": 1,
      "maximum": 100,
      "default": 20,
      "description": "Maximum number of files to show"
    },
    "color": {
      "$ref": "../common/color_definitions.json#/definitions/pyxel_color",
      "description": "Text color"
    },
    "bg_color": {
      "$ref": "../common/color_definitions.json#/definitions/pyxel_color",
      "description": "Background color"
    },
    "selected_color": {
      "$ref": "../common/color_definitions.json#/definitions/pyxel_color",
      "description": "Selected item background color"
    },
    "hover_color": {
      "$ref": "../common/color_definitions.json#/definitions/pyxel_color",
      "description": "Hover item background color"
    },
    "events": {
      "$ref": "../common/event_definitions.json#/definitions/filelist_events",
      "description": "Events that this file list can emit"
    },
    "scrollable": {
      "type": "boolean",
      "default": true,
      "description": "Whether list is scrollable"
    }
  },
  "additionalProperties": false
}