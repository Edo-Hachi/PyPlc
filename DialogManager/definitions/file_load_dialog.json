{
  "title": "Load Circuit File",
  "width": 350,
  "height": 280,
  "controls": [
    {
      "id": "file_list",
      "type": "filelist",
      "x": 10,
      "y": 30,
      "width": 250,
      "height": 180,
      "file_pattern": "*.csv",
      "directory": "./",
      "show_details": true
    },
    {
      "id": "selected_info",
      "type": "label",
      "x": 270,
      "y": 30,
      "width": 70,
      "height": 100,
      "text": "No file\nselected",
      "color": 7
    },
    {
      "id": "load_button",
      "type": "button",
      "x": 270,
      "y": 150,
      "width": 60,
      "height": 25,
      "text": "Load",
      "color": 7,
      "bg_color": 11,
      "hover_color": 10
    },
    {
      "id": "cancel_button",
      "type": "button",
      "x": 270,
      "y": 185,
      "width": 60,
      "height": 25,
      "text": "Cancel",
      "color": 7,
      "bg_color": 8,
      "hover_color": 2
    },
    {
      "id": "refresh_button",
      "type": "button",
      "x": 10,
      "y": 220,
      "width": 60,
      "height": 25,
      "text": "Refresh",
      "color": 7,
      "bg_color": 5,
      "hover_color": 6
    },
    {
      "id": "status_label",
      "type": "label",
      "x": 80,
      "y": 225,
      "width": 180,
      "height": 15,
      "text": "Select a file to load",
      "color": 7
    }
  ]
}
