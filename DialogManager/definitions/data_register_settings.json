{
  "$schema": "./schemas/dialog_base_schema.json",
  "title": "Data Register Settings (Enhanced)",
  "width": 400,
  "height": 320,
  "controls": [
    {
      "id": "title_label",
      "type": "label",
      "x": 20,
      "y": 20,
      "width": 360,
      "height": 20,
      "text": "Data Register Configuration",
      "color": 10
    },
    {
      "id": "address_label",
      "type": "label",
      "x": 20,
      "y": 50,
      "width": 80,
      "height": 15,
      "text": "Address:",
      "color": 7
    },
    {
      "id": "address_input",
      "type": "textinput",
      "x": 110,
      "y": 45,
      "width": 100,
      "height": 25,
      "value": "",
      "placeholder": "D0-D7999",
      "max_length": 8,
      "input_type": "device_address",
      "color": 7,
      "bg_color": 0,
      "border_color": 7,
      "focus_border_color": 10,
      "events": ["change", "focus", "blur", "enter", "validate"],
      "validation": {
        "type": "required_data_register"
      }
    },
    {
      "id": "operation_label",
      "type": "label",
      "x": 20,
      "y": 90,
      "width": 80,
      "height": 15,
      "text": "Operation:",
      "color": 7
    },
    {
      "id": "operation_dropdown",
      "type": "dropdown",
      "x": 110,
      "y": 85,
      "width": 250,
      "height": 25,
      "options": [
        {"value": "MOV", "label": "MOV - Data Transfer"},
        {"value": "ADD", "label": "ADD - Addition"},
        {"value": "SUB", "label": "SUB - Subtraction"},
        {"value": "MUL", "label": "MUL - Multiplication"},
        {"value": "DIV", "label": "DIV - Division"}
      ],
      "default": "MOV"
    },
    {
      "id": "operand_label",
      "type": "label",
      "x": 20,
      "y": 130,
      "width": 80,
      "height": 15,
      "text": "Operand:",
      "color": 7
    },
    {
      "id": "operand_input",
      "type": "textinput",
      "x": 110,
      "y": 125,
      "width": 120,
      "height": 25,
      "value": "0",
      "placeholder": "-32768~32767",
      "max_length": 6,
      "input_type": "integer",
      "color": 7,
      "bg_color": 0,
      "border_color": 7,
      "focus_border_color": 10,
      "events": ["change", "focus", "blur", "enter", "validate"],
      "validation": {
        "type": "integer_range",
        "min": -32768,
        "max": 32767
      }
    },
    {
      "id": "execution_label",
      "type": "label",
      "x": 20,
      "y": 170,
      "width": 80,
      "height": 15,
      "text": "Execution:",
      "color": 7
    },
    {
      "id": "execution_button",
      "type": "button",
      "x": 110,
      "y": 165,
      "width": 80,
      "height": 25,
      "text": "DISABLED",
      "color": 7,
      "bg_color": 2,
      "hover_color": 8,
      "toggle": true,
      "events": ["click"]
    },
    {
      "id": "status_label",
      "type": "label",
      "x": 20,
      "y": 210,
      "width": 360,
      "height": 15,
      "text": "Status: Ready (WindSurf Enhanced)",
      "color": 11
    },
    {
      "id": "error_label",
      "type": "label",
      "x": 20,
      "y": 230,
      "width": 360,
      "height": 15,
      "text": "",
      "color": 8,
      "visible": false
    },
    {
      "id": "help_label",
      "type": "label",
      "x": 20,
      "y": 250,
      "width": 360,
      "height": 15,
      "text": "Configure operation type and operand for data processing",
      "color": 6
    },
    {
      "id": "ok_button",
      "type": "button",
      "x": 230,
      "y": 280,
      "width": 60,
      "height": 30,
      "text": "OK",
      "color": 7,
      "bg_color": 11,
      "hover_color": 10,
      "events": ["click"]
    },
    {
      "id": "cancel_button",
      "type": "button",
      "x": 310,
      "y": 280,
      "width": 60,
      "height": 30,
      "text": "Cancel",
      "color": 7,
      "bg_color": 8,
      "hover_color": 2,
      "events": ["click"]
    }
  ]
}